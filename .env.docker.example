# ============================================
# Docker Compose Environment Variables
# ============================================
# Copy this file to .env in the root directory
# This file is used by docker-compose.yml

# ============================================
# Frontend Configuration
# ============================================
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api/v1

# ============================================
# Auth0 Configuration
# ============================================
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_AUDIENCE=https://your-api-identifier
AUTH0_ISSUER=https://your-tenant.auth0.com/

# ============================================
# JWT Configuration
# ============================================
# Generate with: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# Cookie Configuration
# ============================================
# Generate with: openssl rand -base64 64
COOKIE_SECRET=your-cookie-secret-change-this-in-production
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false
COOKIE_SAME_SITE=strict

# ============================================
# Paymob Configuration
# ============================================
PAYMOB_API_KEY=your-paymob-api-key
PAYMOB_INTEGRATION_ID=your-paymob-integration-id
PAYMOB_HMAC_SECRET=your-paymob-hmac-secret
PAYMOB_CALLBACK_URL=http://localhost:8000/api/v1/payments/paymob/callback

# ============================================
# SendGrid Configuration (Optional)
# ============================================
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourstore.com

# ============================================
# Security Configuration
# ============================================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Frontend URL
# ============================================
FRONTEND_URL=http://localhost:3000
